<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadpostactivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/roundedtop"
        android:id="@+id/relativecontent2"></RelativeLayout>

    <TextView
        android:id="@+id/newposttextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fira_mono_bold"
        android:text="New Post"
        android:textAlignment="center"
        android:textColor="@color/maincolor"
        android:textSize="30dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to choose Image"
        android:layout_below="@+id/relativecontent2"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fira_mono_bold"
        android:id="@+id/chooseimagetextview"></TextView>

    <ImageView
        android:id="@+id/newpostimageview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/chooseimagetextview"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_photo_camera_black_24dp"></ImageView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/captionEditText"
        android:layout_below="@id/newpostimageview"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Caption"
        android:textAlignment="center"></EditText>
    <Button
        android:id="@+id/uploadpostbutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/captionEditText"
        android:background="@drawable/rounded"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Upload"
        android:textSize="20dp"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Get Back"
        android:textColor="@color/maincolor"
        android:textAlignment="center"
        android:textSize="15dp"
        android:id="@+id/getbackprofileIntent"
        android:layout_marginBottom="20dp"></TextView>

    <ProgressBar
        android:id="@+id/postuploadingprogress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"></ProgressBar>

</RelativeLayout>
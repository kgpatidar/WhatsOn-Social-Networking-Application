<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commentactivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/relativecontent7">

        <ImageView
            android:id="@+id/profileofcommentload"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/defaultprofile"></ImageView>

        <TextView
            android:id="@+id/usernameofcommentload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileofcommentload"
            android:text="kgp123@gmail.com"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/dateofuploadofcommentload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/profileofcommentload"
            android:layout_below="@+id/usernameofcommentload"
            android:text="April 22, 1999"></TextView>

        <TextView
            android:id="@+id/captionofcommentload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileofcommentload"
            android:text="I am very happy to see this"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"></TextView>

        <ImageView
            android:id="@+id/postimageofcommentload"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/captionofcommentload"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/defaultprofile"></ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/textvuewofcommebt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fira_mono_bold"
        android:textColor="@color/maincolor"
        android:textAlignment="center"
        android:layout_below="@id/relativecontent7"></TextView>

    <ListView
        android:id="@+id/commentlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvuewofcommebt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_above="@id/codjafhlfha"
        android:layout_marginBottom="10dp"></ListView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/codjafhlfha"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/commentedittextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Comment"
            android:textSize="18dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:layout_marginTop="10dp"></EditText>

        <ImageView
            android:id="@+id/commentbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_marginRight="10dp"></ImageView>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewallpostactivity">

    <RelativeLayout
        android:id="@+id/relativecontent2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/roundedtop"></RelativeLayout>

    <ListView
        android:id="@+id/allpostlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativecontent2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></ListView>

</RelativeLayout>